{% extends 'base.html.twig' %}

{% block title %}Hello AdminCategoryController!{% endblock %}

{% block body %}

<section class="container">

    <table>
        
        <tr>
            <th>Categories :</th>
            <th scope="col">voir</th>
            <th scope="col">remove</th>
            <th scope="col">Edit</th>

        </tr>
        <a href="{{path('app_admin_category_add')}}">Add</a> 
        {% for category in categories %}
                <tr>
                    <td>
                        {{category.label}}
                    </td>
                    <td>
                        <a href="{{ path('app_admin_category_show', {'id': category.id}) }}">Voir</a>
                    </td>
                    <td>
                        <a href="{{ path('app_admin_category_delete', {'id': category.id}) }}">Supprimer</a>
                    </td>
                    <td> 
                        <a href="{{path('app_admin_category_edit',{id : category.id})}}">Edit</a>                                
                    </td>

                </tr>
                
            </tbody>
        {% endfor %}
    </table>
</section> 

{% endblock body %}
